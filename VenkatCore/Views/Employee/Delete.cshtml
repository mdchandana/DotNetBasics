@model EmpCreateVM
@{
    ViewData["Title"] = "Delete Employee";
}


<h3 class="mt-5 text-info">Delete Employee</h3>

<ul>
    <li>Employee Id      : @Model.Id</li>
    <li>Employee Name    : @Model.Name</li>
    <li>Employee Email   : @Model.Email</li>
    <li>Employee Dept    : @Model.Gender</li>
</ul>

<br />

<h3 class="text-danger"> Are you sure want to delete this record ?</h3>

<br />

<form asp-controller="Employee" asp-action="Delete" method="post">

    <input hidden asp-for="Id" />

    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">No,Back to All Employees</a>
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>


