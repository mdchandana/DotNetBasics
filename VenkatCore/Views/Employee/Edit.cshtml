@model EmpCreateVM
@{
    ViewData["Title"] = "Edit Employee";
}



<form asp-controller="Employee" asp-action="Edit" method="post" class="mt-5">

    <h3 class="text-info">Edit Employee</h3>
    <br />

    <input hidden asp-for="Id" />


    <div class="form-group row">
        <div class="col-md-2">
            <label asp-for="Name" class="form-label"></label>
        </div>
        <div class="col-md-4">
            <input asp-for="Name" class="form-control" />
        </div>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group row">
        <div class="col-md-2">
            <label asp-for="Email" class="form-label"></label>
        </div>
        <div class="col-md-4">
            <input asp-for="Email" class="form-control" />
        </div>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-group row">
        <div class="col-md-2">
            <label asp-for="Gender" class="form-label"></label>
        </div>
        <div class="col-md-4">
            <select asp-for="Gender" class="form-control"
                    asp-items="@Html.GetEnumSelectList<Gender>()">
                @*<option value="">Plz Select</option>*@
                <option>Plz Select</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="Gender"></span>
    </div>

    <div class="form-group row m-5">
        <div class="col-md-3">
            <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back To List</a>
            <input type="submit" class="btn btn-success" value="Update" />
        </div>
    </div>
</form>